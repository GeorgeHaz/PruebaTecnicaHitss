                        "application/json": {
                            "schema": {
                                "properties": {
                                    "order_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-11-19"
                                    },
                                    "total": {
                                        "type": "numeric",
                                        "example": "100.00"
                                    },
                                    "status": {
                                        "type": "string",
                                        "example": "pending"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cliente actualizado"
                    }
                },
                "security": [
