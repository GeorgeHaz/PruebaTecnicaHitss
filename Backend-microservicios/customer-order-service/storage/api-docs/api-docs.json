{
    "openapi": "3.0.0",
    "info": {
        "title": "API Clientes y Pedidos",
        "description": "Documentación técnica del microservicio PHP",
        "version": "1.0.0"
    },
    "paths": {
        "/api/clients": {
            "get": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Listar clientes",
                "operationId": "d00d20521584ab5da83e088abb7aded2",
                "responses": {
                    "200": {
                        "description": "Lista de clientes recuperada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "first_name": {
                                                "type": "string",
                                                "example": "Juan"
                                            },
                                            "last_name": {
                                                "type": "string",
                                                "example": "Pérez"
                                            },
                                            "email": {
                                                "type": "string",
                                                "example": "juan@test.com"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Crear un nuevo cliente",
                "operationId": "f1e86e5b79fedfa6593067977292b13b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "first_name",
                                    "last_name",
                                    "email"
                                ],
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "Juan"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Pérez"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "juan@test.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "0991234567"
                                    },
                                    "address": {
                                        "type": "string",
                                        "example": "Av. Amazonas"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Cliente creado exitosamente"
                    },
                    "422": {
                        "description": "Error de validación (Email duplicado)"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/clients/{id}": {
            "put": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Actualizar información del cliente",
                "operationId": "7d0a5ae9e306858d30e04fc50265d80c",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del cliente",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "Juan Editado"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Pérez"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "0990000000"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cliente actualizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Eliminar un cliente",
                "operationId": "c929f14f421a80a896c6fe116ffdc317",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Cliente eliminado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/dashboard/stats": {
            "get": {
                "tags": [
                    "Dashboard"
                ],
                "summary": "Obtener estadísticas generales y gráficas",
                "operationId": "2d1bd6c9f8fe1cf3f8cafed219f661e0",
                "responses": {
                    "200": {
                        "description": "Datos del dashboard recuperados exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "kpis": {
                                            "description": "Indicadores clave de rendimiento",
                                            "properties": {
                                                "total_orders": {
                                                    "type": "integer",
                                                    "example": 150
                                                },
                                                "active_clients": {
                                                    "type": "integer",
                                                    "example": 45
                                                },
                                                "pending_orders": {
                                                    "type": "integer",
                                                    "example": 12
                                                },
                                                "completed_orders": {
                                                    "type": "integer",
                                                    "example": 130
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "charts": {
                                            "description": "Datos para las gráficas",
                                            "properties": {
                                                "orders_by_status": {
                                                    "description": "Conteo agrupado por estado",
                                                    "type": "object",
                                                    "example": {
                                                        "pending": 12,
                                                        "completed": 130,
                                                        "canceled": 8
                                                    }
                                                },
                                                "activity_last_30_days": {
                                                    "description": "Ventas por día",
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "date": {
                                                                "type": "string",
                                                                "format": "date",
                                                                "example": "2023-11-20"
                                                            },
                                                            "count": {
                                                                "type": "integer",
                                                                "example": 5
                                                            },
                                                            "income": {
                                                                "type": "number",
                                                                "format": "float",
                                                                "example": 540.5
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado (Token inválido o ausente)"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/orders": {
